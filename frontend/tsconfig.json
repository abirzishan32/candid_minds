{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "app/(root)/resume-checker/page.tsx",
    "app/components/ui/3d-card.tsx",
    "app/components/ui/background-beams.tsx",
    "app/components/ui/glowing-stars.tsx",
    "app/components/ui/infinite-moving-cards.tsx",
    "app/components/ui/sparkles.tsx",
    "app/components/ui/text-reveal-card.tsx",
    "app/components/ui/wavy-background.tsx",
    "app/lib/utils.ts"
  ]
}
